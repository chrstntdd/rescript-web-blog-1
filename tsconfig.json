{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "./dist/types",
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": false,
		"rootDirs": ["src", "e2e"],
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"jsx": "preserve",
		"allowJs": false
	},
	"include": ["src/**/*.gen.tsx", "./bench.ts", "e2e/**/*"],
	"exclude": ["src/**/*.test.*", "src/**/*.bs.js"]
}
